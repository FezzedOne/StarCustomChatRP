        "lblWarningLanguagesDisabled": {
          "type": "label",
          "position": [120, 80],
          "hAnchor": "mid",
          "visible": false,
          "wrapWidth": 170,
          "color": "red",
          "translationKey": "settings.plugins.languages.languages_disabled"
